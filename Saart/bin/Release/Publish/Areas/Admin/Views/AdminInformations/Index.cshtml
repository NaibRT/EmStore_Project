@model IEnumerable<Saart.Models.AdminInformation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    <button class="btn btn-primary"> @Html.ActionLink("Create New", "Create")</button>
   
</p>
<table class="table table-hover table-bordered " id="--custom-table">
    <tr>
        <th scope="col" style="background:#336cc7">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th scope="col" style="background:#336cc7">
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>Yenilə</th>
        <th>Sil</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            <button class="btn btn-primary">@Html.ActionLink("Yenilə", "Edit", new { id = item.id })  </button>
                       
        </td>
        <td><button class="tbn btn-danger"> @Html.ActionLink("Sil", "Delete", new { id = item.id })</button></td>
    </tr>
}

</table>
