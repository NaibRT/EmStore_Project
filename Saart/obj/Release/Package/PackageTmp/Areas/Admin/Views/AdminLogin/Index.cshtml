<div class="col-md-12 text-center --main">

    <div class="logo-wrapper">
        <img src="~/Content/image/logo.png" />
    </div>

    <form action="~/Admin/AdminLogin/Index" method="post">
        <div class="form-group --custom">
            <input type="text" name="username" placeholder="Username" class="form-control userInp" />
            <input type="password" name="password" placeholder="Password" class="form-control passInp" />
            <button type="submit" class="btn btn-info subBtn">Submit</button>
        </div>
        <div class="clearfix"></div>
    </form>    

</div>




